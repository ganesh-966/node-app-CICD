pipeline {
    agent any

    environment {
        SERVER_IP      = '172.31.19.162'                // Your EC2 server IP
        SSH_CREDENTIAL = 'node-app-key'               // Jenkins SSH credential ID
        REPO_URL       = 'https://github.com/ganesh-966/node-app-CICD.git'
        BRANCH         = 'main'
        REMOTE_USER    = 'ubuntu'
        REMOTE_PATH    = '/home/ubuntu/node-app'
        APP_NAME       = 'node-app'                   // PM2 app name
        NODE_ENV       = 'production'                // optional
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo "üì• Cloning repository..."
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Upload Files to EC2') {
            steps {
                echo "üöÄ Uploading files to EC2..."
                sshagent([SSH_CREDENTIAL]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} 'mkdir -p ${REMOTE_PATH}'
                        scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:${REMOTE_PATH}/
                    """
                }
            }
        }

        stage('Install Dependencies & Start App') {
            steps {
                echo "üîß Installing dependencies and starting app..."
                sshagent([SSH_CREDENTIAL]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            cd ${REMOTE_PATH} &&
                            npm install &&
                            pm2 describe ${APP_NAME} > /dev/null 2>&1 && \
                                pm2 restart ${APP_NAME} || pm2 start app.js --name ${APP_NAME} &&
                            pm2 save
                        '
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "‚úÖ Checking app status on EC2..."
                sshagent([SSH_CREDENTIAL]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} 'pm2 list | grep ${APP_NAME}'
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'üéâ Application deployed successfully!'
        }
        failure {
            echo '‚ùå Deployment failed. Check the logs above for details.'
        }
    }
}
